---
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content="{Astro.generator}" />
    <meta name="description" content={description} />
    <title>title</title>
  </head>
  <style is:global>
	body{
		color: #222;
		font-family:Arial, Helvetica, sans-serif;
		font-size:Â 1.3rem;
	}
	h1, p{
		color: #222;
	}

    .hero-nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #222;
      padding: 15px 30px;
    }

    .hero-nav ul {
      list-style: none;
      display: flex;
      gap: 20px;
      margin: 0;
      padding: 0;
    }

    .hero-nav ul li {
      display: inline;
    }

    .hero-nav ul li a {
      text-decoration: none;
      color: white;
      font-size: 1rem;
      padding: 8px 15px;
      transition: 0.3s;
    }

    .hero-nav ul li a:hover {
      background: dimgray;
      border-radius: 5px;
    }

    .auth-links {
      margin-left: auto;
    }

    .container {
      max-width: 1200px;
      margin: auto;
      padding: 20px;
      text-align: center;
    }

    .hero {
      background: url("/public/assets/background.jpg") no-repeat center;
      background-size: cover;
      color: white;
      padding: 100px 20px;
    }

    .hero h1 {
      font-size: 2.5rem;
    }

    .hero p {
      font-size: 1.2rem;
      margin-bottom: 20px;
    }

    .btn{
      display: inline-block;
      padding: 10px 20px;
      background: #2d2d2d;
      color: white;
      text-decoration: none;
      font-weight: bold;
      border-radius: 5px;
    }

	.btn:hover{
		background-color: dimgrey;
	}

    .services {
      margin-top: 40px;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }

    .service {
      border: 1px solid #ddd;
      padding: 15px;
      border-radius: 10px;
    }

    .service img {
      width: 100%;
      border-radius: 10px;
    }
  </style>
  <body>
    <slot />
  </body>
</html>
